 
 <html>
<head>
    <title>Book an Appointment</title>
     

         <link rel="stylesheet" href="/public/css/book.css"> 
    <script type="text/javascript" src="http://code.jquery.com/jquery-1.7.2.min.js"></script>
    <script type="text/javascript" src="http://code.jquery.com/ui/1.10.4/jquery-ui.js"></script>
    <script language="javascript">
        $(document).ready(function () {
            $("#txtdate").datepicker({
                minDate: 0
            });
        });
    </script>
    
</head>
 
<div class="book">
      <div class="book-app">
        <h1><u>Book an Appointment</u></h1>
        <form>
          <label>First Name</label>
          <input type="text" placeholder="first name" required>
          <label>Last Name</label>
          <input type="text" placeholder="last name" required>
           <label>Date of Birth</label>
            <input type="date" placeholder="Birthday" required>
          <label>Gender</label>
          <select name="gender">
            <option value="none" selected>Gender</option>
            <option value="male">Male</option>
            <option value="female">Female</option>
            <option value="other">other</option>
          </select>
          <label>Email</label>
          <input type="email" placeholder="Email" required><br>
          <label>Phone Number</label>
          <input type="text" placeholder="Phone Number" required><br><br>
          <label for="disease">Select your problem with respective doctor?</label>
           
            <select name="doctors" id="disease">
              <option value="none" selected>Choose Disease and Doctor</option>
                <option value="Koushal Anitha Raja">Hepatitis A -- Koushal Anitha Raja</option>
                <option value="Koushal Anitha Raja">Hepatitis B -- Koushal Anitha Raja</option>
                <option value="Inchara Nagaraju">Hepatitis C -- Inchara Nagaraju</option>
                <option value="Inchara Nagaraju">Hepatitis E -- Inchara Nagaraju</option>
                <option value="Darshil Sanjay Shah">Palliative Care -- Darshil Sanjay Shah</option>
                <option value="Darshil Sanjay Shah">Scabies -- Darshil Sanjay Shah</option>
                <option value="Ami Desai">Scarlet Fever -- Ami Desai</option>
                <option value="Ami Desai">Adenovirus -- Ami Desai</option>
                <option value="Saikrishna Sarangan">Campylobacter -- Saikrishna Sarangan</option>
                <option value="Saikrishna Sarangan">Cryptococcus -- Saikrishna Sarangan</option>
            </select>
            <h3><a href='public/css/more.html' target="_blank">Know More about the diseases</a></h3>
    <p class="date">Select Date:</p>
    <input id="txtdate" type="text" value="choose date">
    <br>
           <label>Select Time:</label>
          <select name="appointment">
            <option value="time" selected>Select Time</option>
            <br>
            <option value="10:30AM">10:30AM</option>
            <option value="08:00PM">08:00PM</option>
          </select><br><br>
          <input type="submit" value="LogIn">
    </form>
    {{#if error}}
    
        <p>{{error}}</p>
    
    {{/if}}
    <a href="/patient">
        <h3>
            <center>HOME</center>
        </h3>
    </a><br>
          </div>
          </div>
     
          </html>